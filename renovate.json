{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "Renovate",
    "dependencies"
  ],
  "packageRules": [
    { 
     "matchManagers": ["npm"],
     "appendLabels": ["javascript"]
    },
    }
     "matchManagers": ["github-actions"],
     "appendLabels": ["github_actions"]
    },
    }
     "matchManagers": ["nvm"],
     "appendLabels": ["nvm"]
    },
    }
     "matchPackagePatterns": ["dockerfile"],
     "appendLabels": ["dockerfile"]
    }
  ]
}
