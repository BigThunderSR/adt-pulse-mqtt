{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "Renovate",
    "dependencies"
  ],
  "packageRules": [
    { 
     "matchLanguages": ["javascript"],
     "addLabel": ["javascript"]
    },
    {
     "matchManagers": ["github-actions"],
     "addLabel": ["github_actions"]
    },
    {
     "matchManagers": ["nvm"],
     "addLabel": ["nvm"]
    },
    {
     "matchPackagePatterns": ["dockerfile"],
     "addLabel": ["dockerfile"]
    }
   ]
}
