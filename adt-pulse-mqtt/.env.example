# ADT Pulse MQTT Configuration
# Copy this file to .env and fill in your actual values
# The .env file will not be committed to Git

# ADT Pulse Credentials
ADT_USERNAME=your_adt_username
ADT_PASSWORD=your_adt_password
ADT_FINGERPRINT=your_device_fingerprint

# MQTT Configuration
MQTT_HOST=localhost
MQTT_URL=
MQTT_USERNAME=
MQTT_PASSWORD=

# MQTT Topics
ALARM_STATE_TOPIC=home/alarm/state
ALARM_COMMAND_TOPIC=home/alarm/cmd
ZONE_STATE_TOPIC=adt/zone
SMARTTHINGS_TOPIC=smartthings
SMARTTHINGS_ENABLED=false

# SSL Configuration (optional)
SSL_ENABLED=false
SSL_CERT_FILE=fullchain.pem
SSL_KEY_FILE=privkey.pem
